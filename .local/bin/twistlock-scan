#!/usr/bin/env pwsh
[CmdletBinding()]
param (
    [Parameter()]
    [String]
    $ImageName
)

$env:AUTH_TOKEN = "$(gcloud auth print-access-token)"

docker run --user root --rm -v /var/run/docker.sock:/var/run/docker.sock -e AUTH_TOKEN -e TWISTLOCK_USER -e TWISTLOCK_PWD gcr.io/iaas-gcr-reg-prd-ad3d/csa/cloud-services/twistlock-scan:1.0.0 $ImageName